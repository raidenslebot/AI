<Window x:Class="RaijinUI.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaijinUI"
        mc:Ignorable="d"
        Title="Create New Project - Raijin ECGI"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a"
        Foreground="#e0e0e0"
        FontFamily="Consolas"
        FontSize="12"
        Icon="Resources/raijin.ico"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="RaijinButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3d3d3d"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RaijinTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="RaijinComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="RaijinGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" Margin="16">

            <!-- Project Name -->
            <GroupBox Header="Project Information" Style="{StaticResource RaijinGroupBoxStyle}">
                <StackPanel>
                    <TextBlock Text="Project Name:" Margin="0,0,0,4"/>
                    <TextBox x:Name="ProjectNameTextBox" Style="{StaticResource RaijinTextBoxStyle}"
                             Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,12"/>

                    <TextBlock Text="Project Type:" Margin="0,0,0,4"/>
                    <ComboBox x:Name="ProjectTypeComboBox" Style="{StaticResource RaijinComboBoxStyle}"
                              ItemsSource="{Binding ProjectTypes}"
                              SelectedItem="{Binding SelectedProjectType}"
                              Margin="0,0,0,12"/>

                    <TextBlock Text="Description:" Margin="0,0,0,4"/>
                    <TextBox x:Name="DescriptionTextBox" Style="{StaticResource RaijinTextBoxStyle}"
                             Text="{Binding ProjectDescription, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
                </StackPanel>
            </GroupBox>

            <!-- Project Templates -->
            <GroupBox Header="Project Template" Style="{StaticResource RaijinGroupBoxStyle}">
                <StackPanel>
                    <TextBlock Text="Choose a starting template:" Margin="0,0,0,8"/>
                    <ListBox x:Name="TemplateListBox" Style="{StaticResource RaijinComboBoxStyle}"
                             ItemsSource="{Binding ProjectTemplates}"
                             SelectedItem="{Binding SelectedTemplate}"
                             Height="80" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#888888"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </GroupBox>

            <!-- Advanced Options -->
            <GroupBox Header="Advanced Options" Style="{StaticResource RaijinGroupBoxStyle}">
                <StackPanel>
                    <CheckBox Content="Initialize with Git repository"
                              IsChecked="{Binding InitializeGit}"
                              Style="{StaticResource RaijinCheckBoxStyle}"/>
                    <CheckBox Content="Create virtual environment (Python)"
                              IsChecked="{Binding CreateVirtualEnv}"
                              Style="{StaticResource RaijinCheckBoxStyle}"/>
                    <CheckBox Content="Add basic documentation structure"
                              IsChecked="{Binding AddDocumentation}"
                              Style="{StaticResource RaijinCheckBoxStyle}"/>
                    <CheckBox Content="Include testing framework"
                              IsChecked="{Binding IncludeTesting}"
                              Style="{StaticResource RaijinCheckBoxStyle}"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="1" Background="#2d2d2d" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Style="{StaticResource RaijinButtonStyle}"
                        Click="CancelButton_Click" Margin="0,0,8,0"/>
                <Button Content="Create Project" Style="{StaticResource RaijinButtonStyle}"
                        Background="#00aa00" Click="CreateButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>