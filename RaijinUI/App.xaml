<Application x:Class="RaijinUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RaijinUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global application resources -->
        <SolidColorBrush x:Key="RaijinAccentBrush" Color="#00aaff"/>
        <SolidColorBrush x:Key="RaijinWarningBrush" Color="#ffaa00"/>
        <SolidColorBrush x:Key="RaijinErrorBrush" Color="#ff4444"/>
        <SolidColorBrush x:Key="RaijinSuccessBrush" Color="#00ff00"/>
    </Application.Resources>
</Application>